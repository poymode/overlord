<h1>New app</h1>

<%= form_for(@app) do |f| %>
  <% if @app.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@app.errors.count, "error") %> prohibited this app from being saved:</h2>

      <ul>
      <% @app.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% if @apps.empty? %>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    <% else %>
      <% @apps.each do |a| %>
        <% if @server.apps.include? a %>
          <%= check_box_tag 'apps[]', a.name, true %><%= a.name %>
        <% else %>
          <%= check_box_tag 'apps[]', a.name %><%= a.name %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', apps_path %>
